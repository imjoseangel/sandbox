<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: 'User Login'
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: 'Username'
                multiline: False
                write_tab: False
            TextInput:
                id: password
                password: True
                hint_text: 'Password'
                multiline: False
                write_tab: False
            RelativeLayout:
                Button:
                    text: 'Login'
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: error_label
                text: ''
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: 'Reset Password'
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: 'Sign Up'
                on_press: root.signup()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.logout()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        Label:
            text: 'How do you feel?'
        TextInput:
            id: feeling
            hint_text: 'Things to try: happy, sad, unloved'
            multiline: False
            write_tab: False
        Button:
            text: 'Enlighten me'
            on_press: root.enlighten(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: ''
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: 'User Sign Up'
        TextInput:
            id: username
            hint_text: 'Username'
            multiline: False
            write_tab: False
        TextInput:
            id: password
            password: True
            hint_text: 'Password'
            multiline: False
            write_tab: False
        Button:
            text: 'Sign Up'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: 'User Sign Up Success'
        Button:
            text: 'Go Back'
            on_press: root.go_back()


<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    LoginScreenSuccess:
        name: 'login_screen_success'
    SignUpScreen:
        name: 'signup_screen'
    SignUpScreenSuccess:
        name: 'sign_up_screen_success'
