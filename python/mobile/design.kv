<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: 'User Login'
            TextInput:
                hint_text: 'Username'
            TextInput:
                hint_text: 'Password'
            Button:
                text: 'Login'
        GridLayout:
            cols: 2
            Button:
                text: 'Reset Password'
            Button:
                text: 'Sign Up'
                on_press: root.signup()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: 'User Sign Up'
        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: password
            hint_text: 'Password'
        Button:
            text: 'Sign Up'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name: 'signup_screen'
